<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/inc_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="TÃ­tulo"
                        android:maxLength="17"
                        />
                </android.support.design.widget.TextInputLayout>




            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tipo Incidente: "
                    android:id="@+id/textView" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inc_tipo"
                    android:hint="Tipo Incidencia"
                    />
            </TableRow>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/inc_contenido"
                        android:hint="Contenido"
                        android:maxLength="100"
                        android:lines="3"
                        android:minLines="1"
                        android:maxLines="3"
                        />
                </android.support.design.widget.TextInputLayout>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <Button
                        android:id="@+id/btnChangeDate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:drawable/ic_menu_my_calendar"
                        />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <Button
                        android:id="@+id/btnChangeHour"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:drawable/ic_menu_recent_history"
                        />

                    <TextView
                        android:id="@+id/tvHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </TableRow>



            </TableRow>
            <TextView
                android:id="@+id/inc_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:visibility="invisible"
                android:textSize="0sp"/>


        <RelativeLayout
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/marcar"
                android:elevation="20dp"
                android:src="@android:drawable/ic_dialog_map"
                android:background="@drawable/ovalo"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="230dp"
                android:layout_alignEnd="@+id/view"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                card_view:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:id="@+id/view"
            >
                <fragment
                    android:id="@+id/map"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>




        </RelativeLayout>
        </TableLayout>


    </LinearLayout>


</LinearLayout>